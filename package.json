{
  "name": "university-email-system",
  "version": "1.0.0",
  "description": "University Email Request Handling System",
  "main": "server/index.js",
  "scripts": {
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "seed": "node scripts/seedData.js",
    "build": "cd client && npm run build"
  },
  "keywords": ["university", "email", "request-handling", "nodejs", "react", "mongodb"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "nodemailer": "^6.9.0",
    "express-validator": "^7.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "nodemon": "^2.0.22"
  }
}
